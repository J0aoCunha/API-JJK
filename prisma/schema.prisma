generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Character {
  id      String  @id @unique @default(uuid())
  name    String
  age     Int
  bio     String
  image   String
  powers  Powers[]
}

model Powers {
  id          String    @id @default(uuid())
  name        String
  description String
  characterId String    @unique
  character   Character @relation(fields: [characterId], references: [id])
}
